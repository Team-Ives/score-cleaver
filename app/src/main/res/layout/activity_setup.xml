<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mn.ives.scorecleaver.SetupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_stars"
        android:scaleType = "centerCrop"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/starting_score_label"
        android:id="@+id/startScoreLabel"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:typeface="serif"
        android:layout_gravity="top|center"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/startScore"
        android:textSize="80sp"
        android:text="@string/default_score"
        android:textColor="@color/white"
        android:typeface="serif"
        android:layout_gravity="top|center"
        android:textAlignment="center"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/num_players_label"
        android:id="@+id/numPlayersLabel"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:typeface="serif"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/twoPlayerButton"
        android:background="@drawable/start_2"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="60dp"
        android:onClick="startTwoPlayerGame"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/fourPlayerButton"
        android:background="@drawable/start_4"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="20dp"
        android:onClick="startFourPlayerGame"/>
</FrameLayout>
